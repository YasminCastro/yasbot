{
  "name": "yasbot",
  "version": "1.0.0",
  "description": "Bot de WhatsApp usando whatsapp-web.js",
  "type": "commonjs",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --quiet src/index.ts",
    "start:prod": "yarn build && pm2 start dist/index.js --name yasbot --env production && pm2 logs yasbot",
    "restart:prod": "yarn build && pm2 stop yasbot && pm2 start dist/index.js --name yasbot --env production && pm2 logs yasbot",
    "reconnect": "rm -rf ./.wwebjs_auth && rm -rf ./.wwebjs_cache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/qrcode-terminal": "^0.12.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "mongodb": "^6.20.0",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.22.3",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "cross-env": "^10.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
